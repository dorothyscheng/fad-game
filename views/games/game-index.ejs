<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Games Index</title>
</head>
<body>
    <%- include('../partials/nav') %>
    <main>
        <section id="indexContainer">
            <div class="adLong">
            </div>
                <ul class="indexUl">
                <% games.forEach(element=>{ %>
                <li id="indexList">
                    <div class="picHolder">
                        <img src="<%= element.image%>">
                    </div>
                    <div class=indexInfo>
                        <a class="title" href="/games/<%= element._id %>"><%= element.name %></a>
                        <p><%=element.description%></p>
                        <div class="editDelete">
                            <a href="/games/<%= element._id %>/edit">Edit</a>
                            <form action="/games/<%= element._id %>?_method=DELETE" method="POST">
                                <button type="submit">DELETE</button>
                            </form>
                        </div>
                    </div>
                </li>
                <% }) %>
                </ul>
            <div class="adLong">
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>