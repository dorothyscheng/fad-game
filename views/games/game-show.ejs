<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <script src="/scripts/user-show.js" defer></script>
    <title><%= selected.name %></title>
</head>
<body>
    <%- include('../partials/nav') %>
    <main>
        <div class=game-show-page>
            <h1><%= selected.name %></h1>
            <div class="three-container">
                    <img class="show-img" src="<%= selected.image %>" alt="<%= selected.name %> game box">
                    <ul class="show-ul show-stats">
                        <li><span>Number of Players:</span> <%= selected.numPlayers.min %>-<%= selected.numPlayers.max %></li>
                        <li><span>Play Time:</span> <%= selected.playTime.min %>-<%= selected.playTime.max %></li>
                        <li><span>Age Rating:</span> <%= selected.ageRating %>+</li>
                        <li><span>Designers:</span> <%= selected.designer.join(', ') %></li>
                        <li><span>Average User Rating:</span> <%= avgRating %></li>
                        <li><span>Genres:</span> <%= selected.genre.join(', ') %></li>
                        <li class="review-button"><a href="/reviews/new">Review this Game</a></li>
                    </ul>
            </div>
            <h3>Description:</h3>
            <p class="show-des"><%= selected.description %></p>
        <br />
            <div class="review-container">
                <div class="review-box">
                    <h2>All Reviews for <%= selected.name %>:</h2>
                    <ul class="show-ul">
                        <% selected.reviews.forEach((element, index) => { %>
                            <li class="review-li game-link">
                                <div>
                                    <input id="rating<%=index%>" class="rating" type="number" value="<%= element.rating %>">
                                    <i id="star0<%=index%>" class="fas fa-star"></i>
                                    <i id="star1<%=index%>" class="fas fa-star"></i>
                                    <i id="star2<%=index%>" class="fas fa-star"></i>
                                    <i id="star3<%=index%>" class="fas fa-star"></i>
                                    <i id="star4<%=index%>" class="fas fa-star"></i>
                                    <i id="star5<%=index%>" class="fas fa-star"></i>
                                    <i id="star6<%=index%>" class="fas fa-star"></i>
                                    <i id="star7<%=index%>" class="fas fa-star"></i>
                                    <i id="star8<%=index%>" class="fas fa-star"></i>
                                    <i id="star9<%=index%>" class="fas fa-star"></i>
                                </div>
                                <%= element.review %>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
        <%- include('../partials/footer') %>
    </main>
</body>
</html>