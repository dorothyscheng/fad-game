<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>FAD Games Splash</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <main>    
        <section id="mainFeatured">
            <img src="/images/fad-logo.png">
            <h1>Welcome to FAD Games</h1>
        </section>
        <h3 class="mainTitle">Top Rated</h3>
        <section class="threeContainer topContainer">
            <div id="topGames" class="threeSet">
                <% for (let i = 1; i<5;i++){ %>
                    <div class="fourPanel">
                        <a href="/games/<%= topNineGames[i].id %>"><img src="<%= topNineGames[i].image %>" alt="<%= topNineGames[i].name %> game box"></a>
                        <h5><%= topNineGames[i].name %></h5>
                    </div>
                <% } %>
            </div>
            <div class="threeSet middleBest">
                <a href="/games/<%= topNineGames[0].id %>"><img src="<%= topNineGames[0].image %>" alt="<%= topNineGames[0].name %> game box"></a>
                <h3><%= topNineGames[0].name %></h3>
            </div>
            <div class="threeSet">
                    <% for (let i = 5; i<9;i++){ %>
                        <div class="fourPanel">
                            <a href="/games/<%= topNineGames[i].id %>"><img src="<%= topNineGames[i].image %>" alt="<%= topNineGames[i].name %> game box"></a>
                            <h5><%= topNineGames[i].name %></h5>
                        </div>
                    <% } %>
                </div>
        </section>
        <h3 class="mainTitle">See reviews left by our amazing users</h3>
        <section class=circleContainer>
            <% topFiveUsers.forEach(element=> { %>
                <div class="round">
                    <a href="/users/<%= element.id %>"><img src="<%= element.profilePic %>" alt="<%= element.username %> picture"></a>
                </div>
            <% }) %>
        </section>

        <section class="threeContainer">
            <div class="halfSet">
                <i class="fas fa-quote-left"></i>
                </br>
                    <p><%= randomGame.review %></p>
                </br>
                <% for (let i=0; i<randomGame.rating; i++) { %>
                    <i class="fas fa-star filled"></i>
                <% } %>
            </div>
            <div class="fourthSet">
                <a href="/games/<%= randomGame.id %>"><img src="<%= randomGame.image %>" alt="<%= randomGame.name %> game box"></a>
            </div>
            <div class="fourthSet">
                <img src="https://picsum.photos/200/200">
            </div>
        </section>
