<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <script src="/scripts/user-show.js" defer></script>
    <title><%= selected.username %></title>
</head>
<body>
    <%- include('../partials/nav') %>
    <main>
        <div class="threeContainer">
            <div class="profilePic">
                <h1><%= selected.username %></h1>
                <img src="<%= selected.profilePic %>" alt="<%= selected.username %> user profile pic">
            </div>
            <div class=twoHolder>
                <h3>All Reviews:</h3>
                <ul class="showUl">
                        <% selected.reviews.forEach((element, index) => { %>
                            <li>
                                <ul class="showUl">
                                    <li><a class="game-link" href="/games/<%= element.game._id %>"><%= element.game.name %></a></li>
                                    <li><div>
                                        <input id="rating<%=index%>" class="rating" type="number" value="<%= element.rating %>">
                                        <i id="star0<%=index%>" class="fas fa-star"></i>
                                        <i id="star1<%=index%>" class="fas fa-star"></i>
                                        <i id="star2<%=index%>" class="fas fa-star"></i>
                                        <i id="star3<%=index%>" class="fas fa-star"></i>
                                        <i id="star4<%=index%>" class="fas fa-star"></i>
                                        <i id="star5<%=index%>" class="fas fa-star"></i>
                                        <i id="star6<%=index%>" class="fas fa-star"></i>
                                        <i id="star7<%=index%>" class="fas fa-star"></i>
                                        <i id="star8<%=index%>" class="fas fa-star"></i>
                                        <i id="star9<%=index%>" class="fas fa-star"></i>
                                    </div></li>
                                    <li><%= element.review %></li>
                                    <div class="editDelete">
                                        <a href="/reviews/<%= element._id %>/edit">Edit Review</a>
                                        <form action="/reviews/<%= element._id %>?_method=DELETE" method="POST">
                                            <button type="submit">Delete Review</button>
                                        </form>
                                    </div>
                                    </br>
                                </ul>
                            </li>
                        <% }); %>
                </ul>
            </div>
        </div>
        <%- include('../partials/footer') %>
    </main>
    
</body>
</html>

